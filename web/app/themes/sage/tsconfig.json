{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@scripts/*": [
                "resources/js/*"
            ],
            "@styles/*": [
                "resources/css/*"
            ],
            "@fonts/*": [
                "resources/fonts/*"
            ],
            "@images/*": [
                "resources/images/*"
            ]
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.js",
        "resources/js/**/*.jsx",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "public"
    ]
}